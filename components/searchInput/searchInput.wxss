.search {
    height: 90rpx;
}

.search-input {
    position: fixed;
    width: 100%;
    height: 90rpx;
    padding: 10rpx;
    background-color: var(--themecolor);
    z-index: 9;
}

.search-input .search-nav {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    font-size: 32rpx;
    color: #666;
    border-radius: 10rpx;
}