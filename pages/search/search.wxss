page {
  background-color: #eeeeee;
  padding: 10rpx 20rpx;
}
.search_page .search_input {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  height: 90rpx;
}
.search_page .search_input input {
  flex: 4;
  background-color: #fff;
}
.search_page .search_input button {
  flex: 1;
  margin-left: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.search_page .seach_content .search_content_item {
  height: 80rpx;
  line-height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 30rpx;
  border: 2rpx solid #d0d0d0;
}
