/* pages/cart/cart.wxss */
page {
  padding-bottom: 90rpx;
}
.cart .address_button {
  padding: 20rpx;
  border-bottom: 10rpx solid var(--themecolor);
}
.cart .address_button button {
  width: 50%;
}
.cart .address_show {
  padding: 20rpx;
  font-size: 30rpx;
  border-bottom: 15rpx solid var(--themecolor);
}
.cart .address_show .address_userInfo {
  display: flex;
  justify-content: space-between;
}
.cart .goods_cart {
  padding: 20rpx 0;
  border-top: 15rpx solid #e8e8e8;
}
.cart .goods_cart .goods_cart_title {
  font-size: 40rpx;
  padding: 0 0 20rpx 20rpx;
  border-bottom: 2rpx solid #e8e8e8;
}
.cart .goods_cart .no_goods {
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .goods_cart .no_goods image {
  width: 60%;
}
.cart .goods_cart .goods_show {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}
.cart .goods_cart .goods_show .goods_check {
  flex: 1;
}
.cart .goods_cart .goods_show .goods_info {
  flex: 8;
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.cart .goods_cart .goods_show .goods_info .goods_image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .goods_cart .goods_show .goods_info .goods_image image {
  width: 80%;
}
.cart .goods_cart .goods_show .goods_info .goods_desc {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 10rpx;
}
.cart .goods_cart .goods_show .goods_info .goods_desc .goods_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.cart .goods_cart .goods_show .goods_info .goods_desc .goods_other {
  display: flex;
  justify-content: space-between;
}
.cart .goods_cart .goods_show .goods_info .goods_desc .goods_other .goods_price {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--themecolor);
}
.cart .goods_cart .goods_show .goods_info .goods_desc .goods_other .buy_num {
  display: flex;
}
.cart .goods_cart .goods_show .goods_info .goods_desc .goods_other .buy_num .num_edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  border: 2rpx solid #a0a0a0;
}
.cart .goods_cart .goods_show .goods_info .goods_desc .goods_other .buy_num .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
}
.cart .bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
}
.cart .bottom-bar .all_check {
  flex: 1;
  padding-left: 20rpx;
}
.cart .bottom-bar .total_info {
  flex: 1;
  text-align: right;
  padding-right: 10rpx;
}
.cart .bottom-bar .total_info .total_price {
  font-size: 35rpx;
  font-weight: 400;
  color: var(--themecolor);
}
.cart .bottom-bar .total_info .progress {
  font-size: 25rpx;
  color: #666;
}
.cart .bottom-bar .total_num {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  font-size: 40rpx;
  font-weight: 400;
  color: #fff;
  background-color: var(--themecolor);
}
